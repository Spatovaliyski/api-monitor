{
  "compilerOptions": {
    "target": "es5",
    "types": [
      "node",
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashes",
          "customMatcher": "\\.module.scss$",
          "dotenvOptions": {},
          "postcssOptions": {},
          "rendererOptions": {}
        }
      }
    ],
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@base/*": [
        "components/00.base/*"
      ],
      "@css-variables": [
        "components/00.base/styles/variables.scss"
      ],
      "@atoms/*": [
        "components/01.atoms/*"
      ],
      "@molecules/*": [
        "components/02.molecules/*"
      ],
      "@organisms/*": [
        "components/03.organisms/*"
      ],
      "@templates/*": [
        "components/04.templates/*"
      ],
      "@pages/*": [
        "components/05.pages/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}